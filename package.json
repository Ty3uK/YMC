{
  "name": "ymc",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Ty3uK/YMC.git",
  "author": "Maksim Karelov <max.karelov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "_build": "parcel build src/index.pug src/ru/index.pug --experimental-scope-hoisting --public-url /YMC",
    "_clean": "rimraf dist",
    "lint": "eslint src/**/*.js && stylelint src/**/*.css",
    "build": "yarn _clean && yarn _build",
    "dev": "parcel src/index.pug src/ru/index.pug"
  },
  "postcss": {
    "plugins": {
      "webp-in-css/plugin": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "import/no-absolute-path": {
        "esmodule": false
      },
      "import/no-unresolved": {
        "esmodule": false
      }
    },
    "env": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "autoprefixer": "^9.4.10",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "parcel": "^1.12.2",
    "postcss-nested": "^4.1.2",
    "pug": "^2.0.3",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.1.0",
    "webp-in-css": "^0.1.0"
  }
}
